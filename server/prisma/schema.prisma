datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(uuid())
  googleId  String   @unique
  email     String   @unique
  name      String
  avatar    String?
  createdAt DateTime @default(now())
  emails    EmailJob[]
}

model EmailJob {
  id          String   @id @default(uuid())
  subject     String
  body        String   @db.Text
  recipient   String
  scheduledAt DateTime
  sentAt      DateTime?
  status      JobStatus @default(PENDING)
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  createdAt   DateTime @default(now())
  messageId   String?
}

enum JobStatus {
  PENDING
  SENT
  FAILED
}
